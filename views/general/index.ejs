<%- include('../_partials/top.ejs') %>

<main>
  <div class="grid">
  <% if(products.length > 0){ %>
    <% for(let product of products){ %>
    <article class="card product-item">
      <header class="card__header">
        <h1 class="product__title"><%= product.title %></h1>
      </header>
      <div class="card__image">
        <img
          src="https://img.freepik.com/free-vector/opened-book-with-empty-pages_1308-78627.jpg"
          ,
          alt=""
          ,
          width="100"
        />
      </div>
      <div class="card__content">
        <h2 class="product__price">$12.99</h2>
        <p class="product__description">just for test</p>
      </div>
      <div class="card__actions">
        <button class="btn">Add to cart</button>
      </div>
    </article>
  </div>
  <% } %> <% }else{ %>
    <article class="no-product-found">
      <h1>
        <span>
          No products available.
        </span>
      </h1>
    </article>
    <% } %>
  </div>
</main>

<%- include('../_partials/bottom.ejs') %>
